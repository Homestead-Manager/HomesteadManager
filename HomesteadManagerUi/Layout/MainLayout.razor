@inherits LayoutComponentBase

<MudThemeProvider Theme="CustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                       OnClick="@((e) => DrawerToggle())" />

        Homestead Manager
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">Home</MudNavLink>
            <MudNavLink Href="/plants" Match="NavLinkMatch.Prefix">Plants</MudNavLink>
            <MudNavLink Href="/apitest" Match="NavLinkMatch.Prefix">API </MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    MudTheme CustomTheme = new MudTheme()
        {
            Palette = new PaletteLight()
            {
                Primary = "#5E8C61",
                Secondary = "#F2E391",

                Background = "#EFF0EB",

                AppbarBackground = "#7A9A95",
                Warning = "#E57F84"
            },
        };

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
